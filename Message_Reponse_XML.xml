

<!-- XML qui simule une requête de toutes les infos des CV en fonction d'une competence -->

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE CV SYSTEM "dataCV.dtd">
<CVS>
    <competence>...</competence>
</CVS>

<!-- Exemple de réponse : -->

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE CV SYSTEM "dataCV.dtd">
<CVS>
    <CV>
        <personne>
            <nom>...</nom>
            <prenom>...</prenom>
            <telephone>...</telephone>
        </personne>
        <mail>...</mail>
        <linkedin>...</linkedin>
        <github>...</github>
        <competences>
            <competence>...</competence>
            <competence>...</competence>
            <competence>...</competence>
            <competence>...</competence>
        </competences>
        <formations>
            <formation>...</formation>
            <formation>...</formation>
            <formation>...</formation>
            <formation>...</formation>
        </formations>
    </CV>
    <CV>
        ...
    </CV>
    ...
</CVS>



